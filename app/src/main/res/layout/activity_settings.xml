<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Quality"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rg_quality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SD (480p) - Low Storage" />

        <RadioButton
            android:id="@+id/rb_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HD (720p) - Balanced" />

        <RadioButton
            android:id="@+id/rb_fhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FHD (1080p) - High Quality" />
    </RadioGroup>

    <!-- Camera Selection Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Camera"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rg_camera_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#33FFFFFF"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/rb_back_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back Camera"
            android:textColor="@android:color/white"
            android:buttonTint="#DC80DAF2" />

        <RadioButton
            android:id="@+id/rb_front_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Front Camera"
            android:textColor="@android:color/white"
            android:buttonTint="#DC80DAF2" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_save_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Save Configuration"
        android:backgroundTint="#DC80DAF2"
        android:textColor="@android:color/black"/>
</LinearLayout>